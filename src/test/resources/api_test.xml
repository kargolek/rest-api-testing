<suite name="Trello Rest API suite">
    <test name="Validate key and token set as system environment variable">
        <classes>
            <class name="org.api.test.SystemEnvironmentKeyAndTokenTest"/>
        </classes>
    </test>
    <test name="Trello API Token tests">
        <groups>
            <run>
                <include name="bad_token"/>
            </run>
        </groups>
        <classes>
            <class name="org.api.test.TokensTest"/>
        </classes>
    </test>
    <test name="Trello Rest API test">
        <groups>
            <run>
                <include name="set_baseURI_create_board"/>
                <include name="set_baseURI"/>
            </run>
        </groups>
        <classes>
            <class name="org.api.test.BoardRestTest"/>
        </classes>
    </test>
</suite>